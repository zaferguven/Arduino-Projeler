//Kamera web sunucusunu başlatan prosedür
void startCameraServer(){
  httpd_config_t config = HTTPD_DEFAULT_CONFIG();
  config.server_port = 80;

  httpd_uri_t index_uri = {
    .uri       = "/",
    .method    = HTTP_GET,
    .handler   = stream_handler,
    .user_ctx  = NULL
  };
  
  //Serial.printf("Web Sunucusu Başlatılıyor. Port: '%d'\n", config.server_port);
  if (httpd_start(&stream_httpd, &config) == ESP_OK) {
    httpd_register_uri_handler(stream_httpd, &index_uri);
  }
}

void setup() {
  WRITE_PERI_REG(RTC_CNTL_BROWN_OUT_REG, 0); //brownout tespiti kapatılıyor
 
  Serial.begin(115200);
  Serial.setDebugOutput(false);

  //kamera görüntü ve pin ayarları
  camera_config_t config;
  config.ledc_channel = LEDC_CHANNEL_0;
  config.ledc_timer = LEDC_TIMER_0;
  config.pin_d0 = Y2_GPIO_NUM;
  config.pin_d1 = Y3_GPIO_NUM;
  config.pin_d2 = Y4_GPIO_NUM;
  config.pin_d3 = Y5_GPIO_NUM;
  config.pin_d4 = Y6_GPIO_NUM;
  config.pin_d5 = Y7_GPIO_NUM;
  config.pin_d6 = Y8_GPIO_NUM;
  config.pin_d7 = Y9_GPIO_NUM;
  config.pin_xclk = XCLK_GPIO_NUM;
  config.pin_pclk = PCLK_GPIO_NUM;
  config.pin_vsync = VSYNC_GPIO_NUM;
  config.pin_href = HREF_GPIO_NUM;
  config.pin_sscb_sda = SIOD_GPIO_NUM;
  config.pin_sscb_scl = SIOC_GPIO_NUM;
  config.pin_pwdn = PWDN_GPIO_NUM;
  config.pin_reset = RESET_GPIO_NUM;
  config.xclk_freq_hz = 20000000;
  config.pixel_format = PIXFORMAT_JPEG; 

  //görüntü formatı seçimi
  if(psramFound()){
    config.frame_size = FRAMESIZE_VGA;//// FRAMESIZE_ + QVGA|CIF|VGA|SVGA|XGA|SXGA|UXGA
    //config.frame_size = FRAMESIZE_UXGA;
    config.jpeg_quality = 15; //0-63 düşük sayı yüksek kalite demek ama çok ısınıyor. 
                              //Denemelerimde 20 görüntü olarak fena değil ve ısınmayı baya azalttı
    config.fb_count = 2; //
  } else {
    config.frame_size = FRAMESIZE_VGA; //// FRAMESIZE_ + QVGA|CIF|VGA|SVGA|XGA|SXGA|UXGA
    config.jpeg_quality = 20; //0-63 düşük sayı yüksek kalite demek ama çok ısınıyor.
    config.fb_count = 1;
  }
  
  // Kamerayı başlatıyor
  esp_err_t err = esp_camera_init(&config);
  if (err != ESP_OK) {
    Serial.printf("Kamera Başlatma Hatası. Hata Kodu: 0x%x", err);
    return;
  }
  // WIFI bağlantısı kuruluyor.
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("");
  Serial.println("WiFi Bağlantısı Başarılı");
  
  Serial.print("IP CAM Hazır! Şu adresi ziyaret edin: http://");
  Serial.print(WiFi.localIP());
  
  // Web sunucusunu başlatıyor.
  startCameraServer();
}

